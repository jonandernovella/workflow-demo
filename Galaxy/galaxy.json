{
	"cpus": 0.25, 
	"mem": 128,
	"id": "galaxy",
	"instances": 1,
	"container": {
    		"type": "DOCKER",
    		"docker": {
      			"image": "bgruening/galaxy-stable:15.10",
      			"network": "BRIDGE",
			"privileged": true,
			"portMappings": [{
                    		"containerPort": 80,
                    		"hostPort": 0,
                    		"protocol": "tcp"
                	}]
    		},
		"volumes": [{
                	"containerPath": "/export",
                	"hostPath": "/mnt/container-volumes/galaxy",
                	"mode": "RW"
            	}]
	}
}
